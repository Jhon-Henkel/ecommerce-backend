{
    "name": "jhowrf/ecommerce-clean-code",
    "description": "Loja virtual",
    "type": "project",
    "autoload": {
        "psr-4": {
            "src\\": "src/",
            "tests\\": "tests/"
        },
        "files": [
            "config.php"
        ]
    },
    "scripts": {
        "php-unit": "vendor/bin/phpunit ./tests/Unit",
        "php-coverage": "vendor/bin/phpunit --coverage-html ./tests/coverage/",
        "php-feature": "vendor/bin/phpunit ./tests/Feature",
        "php-feature-coverage": "vendor/bin/phpunit --coverage-html ./tests/coverage/ ./tests/Feature"
    },
    "authors": [
        {
            "name": "Jhonatan Henkel",
            "email": "jhowrf@gmail.com"
        }
    ],
    "require-dev": {
        "kint-php/kint": "^4.1",
        "mockery/mockery": "dev-master",
        "phpunit/phpunit": "^9"
    },
    "require": {
        "ext-pdo": "*"
    }
}
